{% extends 'components/layout.html.twig' %}



    {% block contentHeader %}
        {% if hasGroup %}

            <div>
                <span>Fil d'actualit√©</span>
                <a href="{{ path('publish_post') }}">
                <button>Publier</button>
                </a>
            </div>

        {% endif %}

    {% endblock %}

    {% block contentBody %}

        {% if hasGroup  %}
            <div>

                <h1> my feed {{ group.name }} ...</h1>

                <div>
                    {% for post in posts %}
                        <span>{{ post.content }}</span>
                        <img src="{{ asset('uploads/images/' ~ post.image) }}" alt="Image de la recette">
                        <br>
                    {% endfor %}
                </div>

            </div>
        {% endif %}
    {% endblock %}

